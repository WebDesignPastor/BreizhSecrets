<div data-controller="switch">
  <%# Navbar %>
  <div class="navbar-relative">
    <div class="d-flex justify-content-between phone-navbar align-items-center">
      <div class="navbar-item">
        <%= link_to root_path do %>
          <%= image_tag('navbar/home.svg') %>
        <% end %>
        <p>Accueil</p>
      </div>
      <div class="navbar-item navbar-icon" data-action="click->switch#displayList" data-switch-target="my-anchor svglist">
        <%= image_tag('navbar/list.svg') %>
        <p>Liste</p>
      </div>
      <div class="navbar-item"  data-action="click->switch#displayMap" data-switch-target="my-anchor svgmap">
        <%= image_tag('navbar/map.svg') %>
        <p>Carte</p>
      </div>
      <div class="navbar-item">
        <%= image_tag('navbar/profil.svg') %>
        <p>Profil</p>
      </div>
      <div class="dropdown-menu doprdown-menu-end" aria-labelledby="navbarDropdown">
        <%= link_to "Historiques", class: "dropdown-item" %>
        <%= link_to "Favoris", class: "dropdown-item" %>
        <%= link_to "Parcours Sauvegardé", class: "dropdown-item" %>
        <%= link_to "Déconnexion", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
      </div>
    </div>
  </div>
  <%# List Results %>
  <div data-switch-target="list" class="d-flex flex-column container-index overflow-hidden">
    <div class="d-flex justify-content-between">
      <h2>Itinéraires</h2>
      <%# Insérer le symbol des filtres qui fait apparaître la modal %>
    </div>
    <div class="d-flex justify-content-between checkbox-wrapper">
      <div data-action="click->switch#noFilter" data-switch-target="btnAucun" class="btn btn-filter btn-primary">Aucun</div>
      <div data-action="click->switch#natureFilter" data-switch-target="btnNature" class="btn btn-filter btn-outline-primary">Nature</div>
      <div data-action="click->switch#urbainFilter" data-switch-target="btnUrbain" class="btn btn-filter btn-outline-primary">Urbain</div>
      <div data-action="click->switch#medievalFilter" data-switch-target="btnMedieval" class="btn btn-filter btn-outline-primary">Médiéval</div>
      <div data-action="click->switch#prehistoriqueFilter" data-switch-target="btnPrehistorique" class="btn btn-filter btn-outline-primary">Préhistorique</div>
    </div>

    <%# Cards %>
    <div>
      <h3>Proches de vous</h3>

      <div class="cards-wrapper">
        <div class="d-flex cards">
          <% @itineraries.each do |itinerary| %>
            <div class="card" data-switch-target="<%= itinerary.category %>">
              <%= link_to itinerary_path(itinerary) do %>
                <div class="card-img position-relative">
                  <%= cl_image_tag itinerary.photos.first.key, height: 160, width: 285, crop: :fill %>
                  <div class="card-details">
                    <div class="card-show-itinerary-infos text-small card-index-details">
                      <%= image_tag "steps.svg" %> <%= itinerary.distance %> km
                      <%= image_tag "hourglass.svg" %> <%= itinerary.duration / 60 %> h <%=  itinerary.duration % 60 if itinerary.duration % 60 != 0 %>
                    </div>
                      <% if itinerary.rating.truncate(0) == 1 %>
                        <%= image_tag "star.svg" %>
                        <%= image_tag "emptystar.svg" %>
                        <%= image_tag "emptystar.svg" %>
                        <%= image_tag "emptystar.svg" %>
                        <%= image_tag "emptystar.svg" %>
                      <% elsif itinerary.rating.truncate(0) == 2 %>
                        <div>
                          <%= image_tag "star.svg" %>
                          <%= image_tag "star.svg" %>
                          <%= image_tag "emptystar.svg" %>
                          <%= image_tag "emptystar.svg" %>
                          <%= image_tag "emptystar.svg" %>

                        </div>
                      <% elsif itinerary.rating.truncate(0) == 3 %>
                        <div>
                          <%= image_tag "star.svg" %>
                          <%= image_tag "star.svg" %>
                          <%= image_tag "star.svg" %>
                          <%= image_tag "emptystar.svg" %>
                          <%= image_tag "emptystar.svg" %>
                        </div>
                      <% elsif itinerary.rating.truncate(0) == 4 %>
                        <div>
                          <%= image_tag "star.svg" %>
                          <%= image_tag "star.svg" %>
                          <%= image_tag "star.svg" %>
                          <%= image_tag "star.svg" %>
                          <%= image_tag "emptystar.svg" %>
                        </div>
                      <% else %>
                        <div>
                          <%= image_tag "star.svg" %>
                          <%= image_tag "star.svg" %>
                          <%= image_tag "star.svg" %>
                          <%= image_tag "star.svg" %>
                          <%= image_tag "star.svg" %>
                        </div>
                      <% end %>
                  </div>
                </div>
                <div class="card-infos">
                  <h4><%= itinerary.name %></h4>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

